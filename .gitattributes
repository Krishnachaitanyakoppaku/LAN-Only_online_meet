# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Configuration files
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.rst text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Media files
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary
*.mp3 binary
*.flac binary
